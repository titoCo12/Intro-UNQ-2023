function nroTotalDeArbolesEnElTerreno() {
    /*
        PROPÓSITO: Describir la cantidad de arboles totales que hay en todo el bosque
        TIPO: Cantidad.
        PRECONDICIONES: Ninguna.
    */
    IrAPrimeraCeldaEnUnRecorridoAl_Y_(Sur, Oeste)
    arbolesContados := nroBolitas(arbol)
    while(haySiguienteCeldaEnUnRecorridoAl_Y_(Sur, Oeste)) {
        IrASiguienteCeldaEnUnRecorridoAl_Y_(Sur,Oeste)
        arbolesContados := arbolesContados + nroBolitas(arbol)
    }
    return (arbolesContados)
}


